<%- include ('partials/_header'); %>

<!-- FORM -->
<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group mb-3">
                            <input type="text" name="title" placeholder="Title" class="form-control">
                        </div>
                        <div class="form-group mb-3">
                            <textarea name="description" id="" cols="80" class="form-control" placeholder="Description"></textarea>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- LIST -->
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>NÂ°</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Operation</th>
                    </tr>
                </thead>

                <tbody>
                    <% for(var i = 0; i < tasks.length; i++) { %>
                        <tr class="<%= tasks[i].status ? 'bg-black bg-opacity-25' : 'bg-white' %>">
                            <td><%= i + 1 %></td>
                            <td><%= tasks[i].title %></td>
                            <td><%= tasks[i].description %></td>
                            <td class="d-flex gap-1">
                                <a href="/done/<%= tasks[i]._id %>" class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark' %>">Done</a>
                                <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">Edit</a>
                                <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include ('partials/_footer'); %>